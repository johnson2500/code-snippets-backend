{
    "name": "typescript-maker",
    "version": "1.2.4",
    "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
    "engines": {
        "node": ">=14 <15"
    },
    "scripts": {
        "start": "npm run build && npm run prod:install && node ./build/index.js",
        "prod:install": "cp package.json build/package.json && cd build && npm install --production",
        "dev:start": "ts-node -r tsconfig-paths/register -r dotenv/config src/index",
        "dev": "nodemon --config restart.json",
        "clean": "rm -rf coverage build tmp",
        "prebuild": "npm install --save tsc typescript",
        "build": "tsc -p tsconfig.build.json",
        "build:watch": "tsc -w -p tsconfig.build.json",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "jest",
        "trace": "tsc --traceResolution"
    },
    "author": "Dantis Mai <mtd.maithanhdanh@gmail.com>",
    "license": "Apache-2.0",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "firebase-admin": "^11.0.0",
        "joi": "^17.6.0",
        "module-alias": "^2.2.2",
        "tslib": "~2.3.0",
        "typescript": "~4.3.5",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.6",
        "@types/node": "^16.11.44",
        "@typescript-eslint/eslint-plugin": "~4.28.2",
        "@typescript-eslint/parser": "~4.28.2",
        "dotenv": "^10.0.0",
        "eslint": "~7.30.0",
        "eslint-config-prettier": "~8.3.0",
        "eslint-plugin-jest": "~24.3.6",
        "jest": "^28.1.3",
        "jest-html-reporter": "^3.6.0",
        "nodemon": "^2.0.12",
        "prettier": "~2.3.2",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.5",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.2.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.10.1",
        "tsutils": "~3.21.0",
        "typescript": "~4.3.5"
    }
}
